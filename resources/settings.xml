<settings>
<category label="Display">
<setting type="sep"/>
<setting id="catchup.plugin" label="Catchup Addon Id (Meta|MetalliQ)" type="text" default="plugin.video.meta" />
<setting type="lsep" label="%I imdb id, %Y year, %T title"/>
<setting id="movie.library.url" label="Custom Movie Library Url" type="bool" default="false" />
<setting id="movie.library" label="Movie Library Url" type="text" enable="eq(-1,true)" default="plugin://plugin.video.*/?action=play&amp;imdb=%I&amp;year=%Y&amp;title=%T" />
<setting type="lsep" label="%W tv show, %S season, %E episode, %V tvdb id"/>
<setting id="tv.library.url" label="Custom TV Library Url" type="bool" default="false" />
<setting id="tv.library" label="TV Library Url" type="text" enable="eq(-1,true)" default="plugin://plugin.video.*/?action=play&amp;imdb=%I&amp;year=%Y&amp;tvshowtitle=%W&amp;season=%S&amp;episode=%E&amp;tvdb=%V&amp;title=%T" />
<setting type="sep"/>
<setting id="search.pages" label="Max Search Pages" type="number"  default="2"/>
<setting id="english" label="English Titles" type="bool" default="false" />
<setting id="hide_duplicates" label="Hide Movies Already In Library" type="bool" default="false" />
<setting type="lsep" label="Sort Order"/>
<setting id="sort" type="enum" values="Default|A-Z|User Rating|Your Rating|Popularity|Votes|Release Date|Date Added" label="Sort" default="0"/>
<setting id="order" type="enum" values="Ascending|Descending" label="order" enable="!eq(-1,0)" default="0"/>
</category>
<category label="Automation">
<setting id="tv_past" label="TV Show Add Period" type="enum" values="Forever|Year|Month|Week" />
<setting id="specials" label="Include Special Episodes" type="bool" default="false" />
<setting id="duplicates" label="Allow Adding Duplicates to Library" type="bool" default="true" />
<setting id="update" label="Update Library after Add Watchlist to Libary" type="bool" default="false" />
<setting type="lsep" label="Automatic Updates"/>
<setting id="login_update" label="Update On Login" type="bool"  default="false"/>
<setting id="login_delay" label="Login Update Delay (minutes)" type="number"  default="2"/>
<setting id="subscription_update" type="bool" label="Enable Update Timer" default="false"/>
<setting id="subscription_timer" type="enum" values="2h|5h|10h|15h|24h" label="Update Frequency" enable="eq(-1,true)" default="2"/>
<setting id="update_tv" label="TV Shows" type="bool"  default="false"/>
<setting id="update_watchlists" label="Subscribed Watchlists" type="bool"  default="false"/>
<setting id="update_main" label="Update Kodi Library After Update" type="bool"  default="false"/>
<setting id="update_clean" label="Clean Kodi Library After Update" type="bool"  default="false"/>
<setting id="service_time" type="text" label="Service Time" default="2000-01-01 00:00:00" visible="false"/>

</category>
</settings>